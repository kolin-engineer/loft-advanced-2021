.skills {
  &__container {
    padding: 145px 0;
    width: 71%;
    margin: 0 auto;
  }
  &__container-inner {
    margin-left: auto;
    max-width: 876px;
  }
  background: url("~images/content/bg-skills.jpg") center / cover no-repeat;
  position: relative;
  min-height: 1021px;
  &:after {
    background: no-repeat url("../images/content/img-hands.png") center/cover;
    position: absolute;
    display: block;
    bottom: -10%;
    left: 0;
    width: 37%;
    height: 96%;
    content: "";
  }
  &__title-wrap {
    max-width: 601px;
  }
  &__subtitle {
    margin-top: 53px;
  }
  &__content {
    /* padding-left: 37%; */
  }
  &__list {
    margin-top: 80px;
  }

  &__list-inner {
    max-width: 750px;
    margin-left: auto;
  }
}
