.footer {
  background-color: #222427;
  &__container {
    padding: 4.3% 0;
    width: 82%;
    @include desktop {
      width: 90%;
      padding-top: 6.7%;
    }
    display: flex;
    justify-content: space-between;
  }
  &__side {
    display: flex;
    width: 25%;
    justify-content: space-between;
    flex-wrap: wrap;
    @include desktop {
    }
  }
  &__copy {
    font-size: 48px;
    line-height: 65px;
    @include desktop {
      width: 100%;
    }
  }
  &__author-box {
    margin-top: -3%;
    flex-basis: 40%;
    @include desktop {
      flex-basis: 80%;
      margin-top: 10%;
    }
  }
  &__author-name {
    text-transform: uppercase;
    font-size: 18px;
    line-height: 30px;
    font-weight: 700;
    margin-bottom: 15%;
  }
  &__author-cite {
    word-wrap: normal;
    font-size: 16px;
    color: rgba(#fff, 0.3);
    line-height: 30px;
  }
  &__main {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    width: 66%;
    color: rgba(#fff, 0.6);
    line-height: 30px;
    @include desktop {
      width: 75%;
    }
  }
  &__nav {
    flex-basis: 100%;
    margin-bottom: 47px;
    line-height: 22px;
  }
  &__desc-box {
    width: 37%;
    @include desktop {
      width: 45%;
    }
  }
  &__site-about {
    margin-bottom: 40px;
    @include desktop {
      margin-bottom: 8.8%;
    }
  }
  &__socials {
  }
  &__quote {
    width: 48%;
    @include desktop {
      width: 54%;
    }
  }
  &__quote-author {
    font-style: italic;
    margin-top: 31px;
    line-height: 22px;
    color: #fff;
  }
}
