.nav {
  text-align: left;
  &__link {
    line-height: inherit;
    border-bottom: 3px solid transparent;
    /* padding: 35px 30px; */
    white-space: nowrap;
    &:not(:first-of-type) {
      margin-left: 62px;
    }
    &:hover {
      color: $links-color;
      border-color: $links-color;
    }
  }
}
